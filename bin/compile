#!/bin/bash

APP_DIR="$1"
ENV_DIR="$3"

# load required environment variables
GIT_OAUTH = $(<"$ENV_DIR/GIT_OAUTH")
if [[ -z $GIT_OAUTH]]; then
    echo "Did you forget to set OAUTH Token?"
    exit 1
fi
# make sure we're in the root of the app dir
cd "$APP_DIR"

sed 's/github.com/$GIT_OAUTH@github.com/g' .gitmodules